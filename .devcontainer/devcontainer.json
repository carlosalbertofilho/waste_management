{
  "name": "Waste Management C++ Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
        "C_Cpp.default.intelliSenseEngine": "Tag Parser",
        "C_Cpp.errorSquiggles": "enabled",
        "C_Cpp.autocomplete": "default",
        "C_Cpp.suggestSnippets": true,
        "C_Cpp.suggestSelection": "first",
        "C_Cpp.formatting": "clangFormat",
        "C_Cpp.clang_format_fallbackStyle": "file"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cmake-tools-helper",
        "bazelbuild.vscode-bazel",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "mounts": [
    "source=devcontainer-postgres-data,target=/var/lib/postgresql/data,type=volume",
    "source=devcontainer-redis-data,target=/data,type=volume"
  ],
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--privileged"
  ],
  "containerEnv": {
    "POSTGRES_USER": "admin",
    "POSTGRES_PASSWORD": "admin",
    "POSTGRES_DB": "waste_management"
  },
  //"postCreateCommand": "bazel build //...",
  "forwardPorts": [8000, 8443, 5432, 6379],
  "remoteUser": "vscode"
}
